
package exercicio1;

/*Vinicius Eleuterio Trindade*/


import java.util.Scanner;


public class main {
    
    public static void main(String[] args) {
        new main().menu();
    }
                 
        public void menu() {
        int caso;
        
        do{
   
        System.out.println("1 - Adicionar um novo nome");
        System.out.println("2 - Apresentar os nomes");
        System.out.println("3 - Pesquisar um nome");
        System.out.println("4 - Remover um nome");
        System.out.println("0 - Sair");
        
        Scanner entrada = new Scanner(System.in);
        caso = entrada.nextInt();
        
        
        apresentarNomes apresentarnomes = new apresentarNomes();
        pesquisarNome pesquisarnome = new pesquisarNome();
        switch (caso)
        {
            case 1:
                adicionarNome adicionarnome = new adicionarNome();
                 System.out.print("Nome: ");
                 String nome = entrada.nextLine();        
                adicionarnome.adicionar(nome);
                break;
           case 2:
                apresentarnomes.apresenta();
                break;
            case 3:
                pesquisarnome.pesquisa();
                    
        }
        }while (caso != 0);
       
        
       }


}
    

